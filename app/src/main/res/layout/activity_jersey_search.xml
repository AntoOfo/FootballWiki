<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDC0BA"
    tools:context=".JerseySearch_Activity">

    <EditText
        android:id="@+id/searchEntry"
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/enter_epl_club"
        android:inputType="text"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#1C1C1C"
        android:text="@string/search_jerseys"
        android:textColor="#FDFEFA"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchEntry" />

    <ListView
        android:id="@+id/resultsListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BDC0BA"
        android:ellipsize="end"
        android:maxLines="20"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/searchBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

